<%= render ::Layouts::SimpleComponent.new(current_page_name:) do %>
  <div class="flex flex-col gap-8 px-4 py-12">
    <div class="text-center">
      <%= link_to root_path, class: "inline-block bg-brand-100 rounded-lg" do %>
        <%= render Basic::IconComponent.new(name: "logo", size: "80px", class_name: "fill-black") %>
      <% end %>
    </div>

    <div class="text-center">
      <h1 class="text-2xl font-bold antialiased">
        <%= t("meta.title.passwords.edit") %>
      </h1>

      <p class="mt-4">
        <%= t("messages.passwords.enter_new_password") %>
      </p>
    </div>

    <%= render Basic::CardComponent.new(class_name: "bg-base-300 border border-brand-200") do |card| %>
      <%= card.with_body(class_name: "p-4") do %>
        <%= form_with(
          class: "flex flex-col gap-4",
          model: form,
          url: password_path,
          method: :patch
        ) do |f| %>
          <%= render Cards::FormErrorsComponent.new(errors: f.object.errors) %>

          <%= f.label :password, class: "form-control" do %>
            <div class="label">
              <span class="label-text">
                <%= t("forms.attributes.password_reset_form/creation.password") %>
              </span>
            </div>

            <%= f.password_field(:password, {
              autocomplete: "new-password",
              autofocus: true,
              class: "bg-base-300 input input-bordered w-full",
              required: true
            }) %>
          <% end %>

          <%= f.button class: "btn btn-primary rounded-full w-fit", type: :submit do %>
            <%= render Basic::IconComponent.new(name: "paper-plane-tilt", size: "18px", class_name: "fill-primary-foreground") %>

            <%= t("verbs.submit") %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <div class="text-center">
      <%= link_to root_path, class: "btn btn-outline btn-sm border-gray-500 text-gray-500 rounded-full group" do %>
        <%= render Basic::IconComponent.new(name: "arrow-left-regular", size: "18px", class_name: "fill-gray-500 group-hover:fill-primary-foreground") %>

        <%= t("verbs.back_to_home") %>
      <% end %>
    </div>
  </div>
<% end %>
