<turbo-stream action="update" target="page-editor-draft-saved-time">
  <template>
    <div class="text-xs">
      <%= t("messages.draft_saved_time_html", time: l(draft_page_entity.modified_at, format: :hm)) %>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="update" target="page-editor-footer">
  <template>
    <%= render Footers::PageComponent.new(
      page_entity: draft_page_entity.page_entity,
      link_list_entity:,
      backlink_list_entity:
    ) %>
  </template>
</turbo-stream>
