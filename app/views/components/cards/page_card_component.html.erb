<%= render Wikino::UI::Card.new(
  class_name: class_names(
    class_name,
    "duration-200 ease-in-out grid min-h-[96px] hover:ring-1 hover:ring-primary px-4 py-2 transition",
    "relative": page.pinned?
  )
) do %>
  <% if page.pinned? %>
    <%= render VC::Basic::Icon.new(name: "push-pin-filled", size: "18px", class_name: "-right-1 -top-1 absolute fill-red-500") %>
  <% end %>

  <%= link_to page_path(Current.space!.identifier, page.number) do %>
    <div class="flex flex-col gap-1">
      <% if show_topic_name %>
        <div class="flex items-center gap-1">
          <%= render Icons::TopicIconComponent.new(topic: page.topic, size: "12px", class_name: "fill-gray-500") %>

          <div class="text-xs text-gray-500">
            <%= page.topic.name %>
          </div>
        </div>
      <% end %>

      <div class="line-clamp-3 text-sm font-bold">
        <%= page.title %>
      </div>
    </div>
  <% end %>
<% end %>
