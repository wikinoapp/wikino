<% title = t("meta.title.notebooks.show", space_name: viewer!.space_name, notebook_name: @notebook.name) %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::MainLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <h1 class="antialiased font-semibold text-2xl">
      <%= @notebook.name %>
    </h1>

    <div>
      <%= link_to(t("nouns.new_note"), new_note_path(viewer!.space_identifier, @notebook.number), class: "link") %>
    </div>

    <div class="gap-2 grid grid-cols-6">
      <% @notes.each do |note| %>
        <%= link_to note_path(viewer!.space_identifier, note.number) do %>
          <%= render Nonoto::UI::Card.new(class_name: "mt-8") do %>
            <%= render Nonoto::UI::Card::Body.new do %>
              <%= note.title %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
