<%= render Breadcrumbs::SpaceBreadcrumbsComponent.new(space:) do |breadcrumbs| %>
  <%= breadcrumbs.with_item do %>
    <%= link_to(
      topic_path(space.identifier, topic.number),
      class: "flex gap-1 items-center"
    ) do %>
      <%= render Icons::TopicComponent.new(topic:, size: "16px", class_name: "fill-gray-600") %>

      <%= topic.name %>
    <% end %>
  <% end %>

  <%= breadcrumbs.with_item do %>
    <%= link_to t("nouns.settings"), topic_settings_path(space.identifier, topic.number) %>
  <% end %>
<% end %>
