<%= render Layouts::BasicComponent.new(current_page_name:) do |layout| %>
  <%= layout.with_header do %>
    <%= render Headers::GlobalComponent.new(signed_in: true, current_page_name:) do |header| %>
      <%= header.with_breadcrumbs do %>
        <%= render Breadcrumbs::SpaceBreadcrumbsComponent.new(space_entity:) %>
      <% end %>
    <% end %>
  <% end %>

  <%= layout.with_main do %>
    <%= render Containers::MainComponent.new(
      content_screen: ContainerComponent::ContentScreen::Small
    ) do %>
      <h1 class="text-2xl font-bold antialiased">
        <%= t("nouns.new_topic") %>
      </h1>

      <%= render Basic::CardComponent.new(class_name: "bg-base-300") do |card| %>
        <%= card.with_body(class_name: "p-4") do %>
          <%= form_with(
            class: "flex flex-col gap-4",
            model: form,
            url: topic_list_path(space_entity.identifier)
          ) do |f| %>
            <%= render Cards::FormErrorsComponent.new(errors: f.object.errors) %>

            <%= f.label :name, class: "form-control" do %>
              <div class="label">
                <span class="label-text">
                  <%= t("forms.attributes.new_topic_form.name") %>
                </span>
              </div>

              <%= f.text_field(:name, {
                autofocus: true,
                class: "bg-base-300 input input-bordered w-full",
                required: true
              }) %>
            <% end %>

            <%= f.label :description, class: "form-control" do %>
              <div class="label">
                <span class="label-text">
                  <%= t("forms.attributes.new_topic_form.description") %>
                </span>
              </div>

              <%= f.text_area(:description, class: "bg-base-300 input input-bordered w-full") %>
            <% end %>

            <div>
              <div class="label">
                <span class="label-text">
                  <%= t("forms.attributes.new_topic_form.visibility") %>
                </span>
              </div>

              <div class="flex flex-col gap-4">
                <div class="flex flex-col gap-2">
                  <label class="flex cursor-pointer items-center gap-2">
                    <%= f.radio_button :visibility, TopicVisibility::Public.serialize, class: "radio" %>

                    <span class="label-text">
                      <%= t("activerecord.attributes.topic.visibility.public") %>
                    </span>
                  </label>

                  <div class="label-text-alt pl-[32px]">
                    <%= t("forms.attributes.new_topic_form.visibility_public_hint") %>
                  </div>
                </div>

                <div class="flex flex-col gap-2">
                  <label class="flex cursor-pointer items-center gap-2">
                    <%= f.radio_button :visibility, TopicVisibility::Private.serialize, class: "radio" %>

                    <span class="label-text">
                      <%= t("activerecord.attributes.topic.visibility.private") %>
                    </span>
                  </label>

                  <div class="label-text-alt pl-[32px]">
                    <%= t("forms.attributes.new_topic_form.visibility_private_hint") %>
                  </div>
                </div>
              </div>
            </div>

            <%= f.button class: "btn btn-primary no-animation rounded-full w-fit", type: :submit do %>
              <%= render Basic::IconComponent.new(name: "paper-plane-tilt", size: "18px", class_name: "fill-primary-content") %>

              <%= t("verbs.create") %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>

  <%= layout.with_footer do %>
    <%= render Footers::GlobalComponent.new(signed_in: true) %>
  <% end %>
<% end %>
