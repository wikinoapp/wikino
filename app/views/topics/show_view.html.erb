<%= render Headers::GlobalComponent.new(signed_in:, current_page_name:) do |header| %>
  <%= header.with_breadcrumbs do %>
    <%= render Breadcrumbs::SpaceBreadcrumbsComponent.new(space_entity:) %>
  <% end %>
<% end %>

<%= render Containers::MainComponent.new(
  content_screen: Containers::MainComponent::ContentScreen::Large
) do %>
  <div class="flex flex-col gap-6 px-4 py-6">
    <%= render Topics::ShowView::HeaderComponent.new(topic_entity:) %>

    <% if pinned_page_entities.present? || page_entities.present? %>
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-4">
          <% if pinned_page_entities.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% pinned_page_entities.each do |page_entity| %>
                <%= render Cards::PageComponent.new(page_entity:, show_topic_name: false) %>
              <% end %>
            </div>
          <% end %>

          <% if page_entities.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% page_entities.each do |page_entity| %>
                <%= render Cards::PageComponent.new(page_entity:, show_topic_name: false) %>
              <% end %>
            </div>
          <% end %>
        </div>

        <% if pagination_entity.has_previous? || pagination_entity.has_next? %>
          <div class="flex justify-center">
            <%= render Basic::PaginationComponent.new(
              pagination_entity:,
              previous_path: topic_path(before: pagination_entity.previous_cursor),
              next_path: topic_path(after: pagination_entity.next_cursor)
            ) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render Footers::PublicComponent.new(signed_in:, class_name: "mt-10") %>
<%= render FixedBottomComponent.new(current_page_name:) %>
