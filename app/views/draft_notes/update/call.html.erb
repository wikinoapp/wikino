<turbo-stream action="update" target="note-editor-draft-saved-time">
  <template>
    <div class="text-xs">
      <%= t("messages.draft_saved_time_html", time: l(@draft_note.modified_at, format: :hm)) %>
    </div>
  </template>
</turbo-stream>

<turbo-stream action="update" target="note-editor-link-list">
  <template>
    <%= render Footers::NoteFooterComponent.new(link_list: @link_list, backlink_list: @backlink_list)  %>
  </template>
</turbo-stream>
