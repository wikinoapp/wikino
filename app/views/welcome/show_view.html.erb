<%= render Layouts::BasicComponent.new(current_page_name:, current_user: nil) do |layout| %>
  <%= layout.with_header do %>
    <%= render Headers::GlobalComponent.new(current_user: nil, current_page_name:) %>
  <% end %>

  <%= layout.with_main do %>
    <%= render Containers::MainComponent.new do %>
      <div class="flex flex-col gap-10 sm:gap-16 pb-16">
        <div class="flex flex-col gap-6 text-center">
          <div class="flex flex-col gap-2">
            <h1 class="text-4xl/8 font-bold antialiased leading-snug">
              <%= t("messages.welcome.hero_title_html") %>
            </h1>

            <p class="text-lg/8 text-gray-600 antialiased">
              <%= t("messages.welcome.hero_description_html") %>
            </p>
          </div>

          <%= link_to sign_up_path, class: "btn btn-primary no-animation rounded-full w-fit self-center" do %>
            <%= render Basic::IconComponent.new(
              name: "paper-plane-tilt",
              size: "18px",
              class_name: "fill-primary-content"
            ) %>

            <%= t("nouns.sign_up") %>
          <% end %>
        </div>

        <div class="flex flex-col gap-6 sm:gap-10">
          <h2 class="text-2xl/8 font-bold antialiased leading-snug text-center">
            <%= t("messages.welcome.features_title") %>
          </h2>

          <div class="flex flex-col gap-8">
            <div class="flex gap-4 flex-wrap-reverse sm:flex-nowrap">
              <div class="flex flex-col gap-4">
                <h3 class="text-lg/8 font-bold antialiased leading-snug">
                  <%= t("messages.welcome.markdown_feature_title") %>
                </h3>

                <p>
                  <%= t("messages.welcome.markdown_feature_description") %>
                </p>
              </div>

              <%= image_tag "welcome/image_1.png", {
                class: "w-full sm:w-1/2 rounded-lg border border-gray-300",
                loading: "lazy"
              } %>
            </div>

            <div class="flex gap-4 flex-wrap-reverse sm:flex-nowrap">
              <div class="flex flex-col gap-4">
                <h3 class="text-lg/8 font-bold antialiased leading-snug">
                  <%= t("messages.welcome.links_feature_title") %>
                </h3>

                <p>
                  <%= t("messages.welcome.links_feature_description_1") %>
                </p>

                <p>
                  <%= t("messages.welcome.links_feature_description_2") %>
                </p>
              </div>

              <%= image_tag "welcome/image_2.png", {
                class: "w-full sm:w-1/2 rounded-lg border border-gray-300",
                loading: "lazy"
              } %>
            </div>

            <div class="flex gap-4 flex-wrap-reverse sm:flex-nowrap">
              <div class="flex flex-col gap-4">
                <h3 class="text-lg/8 font-bold antialiased leading-snug">
                  <%= t("messages.welcome.opensource_feature_title") %>
                </h3>

                <p>
                  <%= t("messages.welcome.opensource_feature_description_1") %>
                </p>

                <p>
                  <%= t("messages.welcome.opensource_feature_description_2") %>
                </p>
              </div>

              <%= image_tag "welcome/image_3.png", {
                class: "w-full sm:w-1/2 rounded-lg border border-gray-300",
                loading: "lazy"
              } %>
            </div>
          </div>
        </div>

        <div class="flex flex-col gap-6 my-6 sm:my-10">
          <div class="text-3xl/8 font-bold antialiased text-center">
            <%= t("messages.welcome.start_cta") %>
          </div>

          <%= link_to sign_up_path, class: "btn btn-primary no-animation rounded-full w-fit self-center" do %>
            <%= render Basic::IconComponent.new(
              name: "paper-plane-tilt",
              size: "18px",
              class_name: "fill-primary-content"
            ) %>

            <%= t("nouns.sign_up") %>
          <% end %>
        </div>

        <footer class="footer justify-around grid-cols-2 sm:grid-cols-3">
          <nav>
            <h6 class="footer-title">
              <%= t("messages.welcome.footer_resources") %>
            </h6>

            <%= link_to "https://wikino.app/s/wikino", class: "link link-hover" do %>
              <%= t("messages.welcome.footer_help_page") %>
            <% end %>

            <%= link_to "https://wikino.app/s/wikino/pages/29", class: "link link-hover" do %>
              <%= t("messages.welcome.footer_release_notes") %>
            <% end %>

            <%= link_to "https://wikino.app/s/wikino/pages/3", class: "link link-hover" do %>
              <%= t("messages.welcome.footer_about_developer") %>
            <% end %>
          </nav>

          <nav>
            <h6 class="footer-title">
              <%= t("messages.welcome.footer_community") %>
            </h6>

            <%= link_to "Discord", "https://discord.gg/8qMetv8fUn", {
              class: "link link-hover",
              target: "_blank",
              rel: "nofollow"
            } %>

            <%= link_to "Bluesky", "https://bsky.app/profile/wikino.app", {
              class: "link link-hover",
              target: "_blank",
              rel: "nofollow"
            } %>

            <%= link_to "Mewst", "https://mewst.com/@wikino", {
              class: "link link-hover",
              target: "_blank",
              rel: "nofollow"
            } %>

            <%= link_to "GitHub", "https://github.com/wikinoapp/wikino", {
              class: "link link-hover",
              target: "_blank",
              rel: "nofollow"
            } %>
          </nav>

          <nav>
            <h6 class="footer-title">
              Legal
            </h6>

            <%= link_to "/terms", class: "link link-hover" do %>
              <%= t("messages.welcome.footer_terms") %>
            <% end %>

            <%= link_to "/privacy", class: "link link-hover" do %>
              <%= t("messages.welcome.footer_privacy") %>
            <% end %>
          </nav>
        </footer>
      </div>
    <% end %>
  <% end %>
<% end %>
