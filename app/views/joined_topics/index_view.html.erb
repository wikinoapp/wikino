<turbo-frame id="joined-topics">
  <div class="flex flex-col">
    <% @topics.each do |topic| %>
      <div class="flex items-center justify-between">
        <%= link_to topic_path(topic.space.identifier, topic.number), {
          class: "text-gray-700 hover:bg-brand-200 transition duration-200 ease-in-out flex items-center gap-2 p-2 rounded-md w-full",
          title: topic.name,
          data: { turbo_frame: "_top" }
        } do %>
          <div class="w-[22px]">
            <%= render Icons::TopicComponent.new(topic:, size: "22px", class_name: "fill-gray-600") %>
          </div>

          <div class="flex flex-col gap-1">
            <div class="line-clamp-1 text-xs text-gray-500">
              <%= topic.space.name %>
            </div>

            <div class="line-clamp-1 text-sm">
              <%= topic.name %>
            </div>
          </div>
        <% end %>

        <%= link_to new_page_path(topic.space.identifier, topic.number), {
          class: "hover:bg-brand-200 transition duration-200 ease-in-out p-2 rounded-md leading-none text-center",
          title: t("verbs.create_page"),
          data: { turbo_frame: "_top" }
        } do %>
          <%= render BaseUI::IconComponent.new(name: "pencil-simple-line", size: "16px", class_name: "fill-gray-700") %>
        <% end %>
      </div>
    <% end %>
  </div>
</turbo-frame>
