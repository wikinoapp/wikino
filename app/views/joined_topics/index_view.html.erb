<turbo-frame id="joined-topics">
  <div class="flex flex-col gap-2">
    <% @topics.each do |topic| %>
      <%= link_to topic_path(topic), {
        class: "text-gray-700 hover:bg-brand-200 transition duration-200 ease-in-out px-4 py-2 flex gap-2 items-center rounded-md w-full",
        title: topic.name
      } do %>
        <%= render BaseUI::IconComponent.new(
          name: "hashtag-regular",
          size: "22px",
          class_name: "fill-gray-600"
        ) %>
        <span class="truncate"><%= topic.name %></span>
      <% end %>
    <% end %>
  </div>
</turbo-frame>
