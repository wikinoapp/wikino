<% title = t("meta.title.sign_up.show") %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::SimpleLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <div class="text-center">
      <div class="mt-12">
        <%= link_to root_url(subdomain: false), class: "inline-block" do %>
          <%= render Wikino::UI::Icon.new(name: "logo", size: "50px", class_name: "fill-base-content") %>
        <% end %>
      </div>

      <h1 class="font-bold mt-8 text-3xl">
        <%= title %>
      </h1>

      <p class="hidden mt-4">
        <%= t("messages.sign_up.description_html") %>
      </p>

      <p class="font-bold mt-4 text-red-500">
        現在アカウント作成はできません。
      </p>

      <p class="hidden mt-4">
        <%= t("messages.sign_up.already_have_an_account_html",
          sign_in_path: params[:skip_no_authentication].nil? ? sign_in_path : sign_in_path(skip_no_authentication: true)
        ) %>
      </p>
    </div>

    <%= render Wikino::UI::Card.new(class_name: "mt-8") do %>
      <%= render Wikino::UI::Card::Body.new do %>
        <%= form_with model: @form, url: email_confirmation_path do |f| %>
          <%= render Cards::FormErrorsCardComponent.new(errors: f.object.errors) %>

          <%= f.label :email, class: "form-control" do %>
            <div class="label">
              <span class="label-text">
                <%= t("forms.attributes.new_email_confirmation_form.email") %>
              </span>
            </div>

            <%= f.email_field(:email, {
              autocomplete: "username",
              autofocus: true,
              class: "input input-bordered w-full",
              required: true
            }) %>
          <% end %>

          <div class="mt-8 text-center">
            <%= f.button class: "btn btn-primary no-animation rounded-full", type: :submit do %>
              <%= t("verbs.submit") %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
