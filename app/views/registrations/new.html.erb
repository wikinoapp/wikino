<% content_for :page_title, page_title_with_suffix(t("page_titles.sign_up")) %>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-12 col-lg-6 py-5">
      <div class="mb-5 text-center">
        <%= link_to root_path, class: "display-1 text-body" do %>
          „ÅÆ
        <% end %>
      </div>

      <div class="px-3 mb-3">
        <h1 class="my-5 text-center">
          <%= t "messages.sign_up.join_nonoto" %>
        </h1>

        <%= form_with model: @new_user, url: sign_up_path, html: { class: "mb-3" }, local: true do |f| %>
          <%= render "application/components/error_panel", resource: f.object %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "nonoto@example.com", required: true, tabindex: 1, type: "email" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, tabindex: 2 %>
            <small class="text-muted form-text">
              <%= t "messages.sign_up.password_hint" %>
            </small>
          </div>

          <div class="text-center">
            <%= f.button class: "btn btn-primary", tabindex: 3 do %>
              <i class="fas fa-rocket mr-1"></i>
              <%= t "nouns.sign_up" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <small>
          <%= t "messages.sign_up.sign_in_link_html", link: link_to(t("nouns.sign_in"), sign_in_path) %>
        </small>
      </div>
    </div>
  </div>
</div>
