<turbo-frame id="edit-suggestion-form">
  <%= form_with(
    model: form,
    url: form_action_path,
    local: false,
    data: {
      turbo: true,
      turbo_stream: true
    }
  ) do |f| %>
    <div id="edit-suggestion-form-errors"></div>

    <div class="space-y-4">
      <div>
        <%= f.label :title, t("forms.edit_suggestions.title"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :title,
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-gray-800 dark:text-white",
            placeholder: t("forms.edit_suggestions.title_placeholder"),
            required: true %>
      </div>

      <div>
        <%= f.label :description, t("forms.edit_suggestions.description"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_area :description,
            rows: 3,
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm dark:bg-gray-800 dark:text-white",
            placeholder: t("forms.edit_suggestions.description_placeholder") %>
      </div>

      <%= f.hidden_field :page_title %>
      <%= f.hidden_field :page_body %>
    </div>

    <div class="mt-6 flex justify-end space-x-3">
      <button type="button"
              data-action="dialog#close"
              class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-md hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <%= t("forms.edit_suggestions.cancel") %>
      </button>
      <%= f.submit t("forms.edit_suggestions.create_submit"),
          class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</turbo-frame>
