<%= render ::Layouts::MainComponent.new(
  current_page_name:,
  content_screen: Layouts::MainComponent::ContentScreen::Medium
) do %>
  <div class="flex items-center justify-center">
    <%= render Basic::CardComponent.new(class_name: "bg-brand-200 rounded-full") do |card| %>
      <%= card.with_body(class_name: "px-6 py-1 leading-none") do %>
        <div class="flex gap-2">
          <%= link_to space_entity.name, space_path(space_entity.identifier), class: "link text-sm" %>

          <span>></span>

          <span class="text-sm">
            <%= t("nouns.settings") %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="flex flex-col gap-6 px-4 py-6">
    <div class="flex items-center justify-center">
      <h1 class="text-2xl font-bold antialiased">
        <%= t("nouns.settings") %>
      </h1>
    </div>

    <%= render Basic::CardComponent.new(class_name: "bg-base-300 border border-brand-200") do |card| %>
      <%= card.with_body(class_name: "p-4") do %>
        <%= link_to t("nouns.general"), space_settings_general_path(space_entity.identifier), class: "link" %>
      <% end %>
    <% end %>
  </div>
<% end %>
