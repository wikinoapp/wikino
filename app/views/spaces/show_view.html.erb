<%= render Layouts::BasicComponent.new(current_page_name:) do |layout| %>
  <%= layout.with_header do %>
    <%= render Headers::GlobalComponent.new(signed_in:, current_page_name:) %>
  <% end %>

  <%= layout.with_main do %>
    <%= render Containers::MainComponent.new(
      content_screen: ContainerComponent::ContentScreen::Large
    ) do %>
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold antialiased">
          <%= space_entity.name %>
        </h1>

        <div class="flex gap-2">
          <% if first_topic_entity&.viewer_can_create_page? %>
            <%= link_to new_page_path(space_entity.identifier, first_topic_entity.number), class: "btn btn-primary no-animation rounded-full" do %>
              <%= render Basic::IconComponent.new(name: "pencil-simple-line", size: "18px", class_name: "fill-primary-content") %>

              <%= t("nouns.new_page") %>
            <% end %>
          <% end %>

          <%= render Dropdowns::SpaceOptionsComponent.new(signed_in:, space_entity:) %>
        </div>
      </div>

      <% if pinned_page_entities.present? || page_entities.present? %>
        <div class="flex flex-col gap-6">
          <div class="flex flex-col gap-4">
            <% if pinned_page_entities.present? %>
              <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
                <% pinned_page_entities.each do |page_entity| %>
                  <%= render Cards::PageComponent.new(page_entity:) %>
                <% end %>
              </div>
            <% end %>

            <% if page_entities.present? %>
              <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
                <% page_entities.each do |page_entity| %>
                  <%= render Cards::PageComponent.new(page_entity:) %>
                <% end %>
              </div>
            <% end %>
          </div>

          <% if pagination_entity.has_previous? || pagination_entity.has_next? %>
            <div class="flex justify-center">
              <%= render Basic::PaginationComponent.new(
                pagination_entity:,
                previous_path: space_path(space_entity.identifier, before: pagination_entity.previous_cursor),
                next_path: space_path(space_entity.identifier, after: pagination_entity.next_cursor)
              ) %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <%= layout.with_footer do %>
    <%= render Footers::GlobalComponent.new(signed_in:) %>
  <% end %>
<% end %>
