<% title = t("meta.title.spaces.show", space_name: space.name) %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::MainComponent.new do %>
  <div class="flex flex-col gap-6 px-4 py-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold antialiased">
        <%= space.name %>
      </h1>

      <% unless Current.viewer!.signed_in? %>
        <%= link_to atom_path(space.identifier), class: "flex gap-1 items-center link link-primary", target: "_blank" do %>
          <%= render Basic::IconComponent.new(name: "rss", size: "16px", class_name: "fill-primary") %>

          <%= t("nouns.rss_feed") %>
        <% end %>
      <% end %>

      <% if space_viewer.can_create_page?(topic: first_joined_topic) %>
        <%= link_to new_page_path(space.identifier, first_joined_topic.not_nil!.number), class: "btn btn-primary no-animation rounded-full" do %>
          <%= render Basic::IconComponent.new(name: "pencil-simple-line", size: "18px", class_name: "fill-primary-content") %>

          <%= t("nouns.new_page") %>
        <% end %>
      <% end %>
    </div>

    <% if pinned_pages.present? || pages.present? %>
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-4">
          <% if pinned_pages.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% pinned_pages.each do |page| %>
                <%= render Cards::PageComponent.new(page:, class_name: "bg-base-300") %>
              <% end %>
            </div>
          <% end %>

          <% if pages.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% pages.each do |page| %>
                <%= render Cards::PageComponent.new(page:, class_name: "bg-base-300") %>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="flex justify-center">
          <%= render Basic::PaginationComponent.new(
            pagination:,
            previous_path: space_path(space.identifier, before: pagination.previous_cursor),
            next_path: space_path(space.identifier, after: pagination.next_cursor)
          ) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
