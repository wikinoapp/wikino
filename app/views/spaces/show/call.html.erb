<% title = t("meta.title.spaces.show", space_name: Current.space!.name) %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::MainLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <h1 class="antialiased font-bold text-2xl">
      <%= t("nouns.home") %>
    </h1>

    <hr class="my-4">

    <% if @pinned_pages.present? || @pages.present? %>
      <div class="flex flex-col gap-4">
        <% if @pinned_pages.present? %>
          <div class="gap-2 grid grid-cols-6">
            <% @pinned_pages.each do |page| %>
              <%= render Cards::PageCardComponent.new(page:, class_name: "bg-base-300") %>
            <% end %>
          </div>
        <% end %>

        <% if @pages.present? %>
          <div class="gap-2 grid grid-cols-6">
            <% @pages.each do |page| %>
              <%= render Cards::PageCardComponent.new(page:, class_name: "bg-base-300") %>
            <% end %>
          </div>
        <% end %>

        <div class="flex justify-center">
          <%= render PaginationComponent.new(
            pagination: @pagination,
            previous_path: space_path(Current.space!.identifier, before: @pagination.previous_cursor),
            next_path: space_path(Current.space!.identifier, after: @pagination.next_cursor)
          ) %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
