<% title = t("meta.title.spaces.show", space_name: Current.space!.name) %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::MainLayoutComponent.new do %>
  <div class="px-4 py-6 flex flex-col gap-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold antialiased">
        <%= t("nouns.home") %>
      </h1>

      <% unless signed_in? %>
        <%= link_to atom_path(Current.space!.identifier), class: "flex gap-1 items-center link link-primary", target: "_blank" do %>
          <%= render Wikino::UI::Icon.new(name: "rss", size: "16px", class_name: "fill-primary") %>

          <%= t("nouns.rss_feed") %>
        <% end %>
      <% end %>
    </div>

    <% if @pinned_pages.present? || @pages.present? %>
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-4">
          <% if @pinned_pages.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% @pinned_pages.each do |page| %>
                <%= render Cards::PageCardComponent.new(page:, class_name: "bg-base-300") %>
              <% end %>
            </div>
          <% end %>

          <% if @pages.present? %>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-4 xl:grid-cols-5">
              <% @pages.each do |page| %>
                <%= render Cards::PageCardComponent.new(page:, class_name: "bg-base-300") %>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="flex justify-center">
          <%= render PaginationComponent.new(
            pagination: @pagination,
            previous_path: space_path(Current.space!.identifier, before: @pagination.previous_cursor),
            next_path: space_path(Current.space!.identifier, after: @pagination.next_cursor)
          ) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
