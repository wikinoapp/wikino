<% content_for :page_title, page_title_with_suffix(t("page_titles.sign_in")) %>

<div class="container">
  <div class="justify-content-center row">
    <div class="col-12 col-lg-6 py-5">
      <div class="mb-5 text-center">
        <%= link_to root_path, class: "display-1 text-body" do %>
          „ÅÆ
        <% end %>
      </div>

      <div class="px-3 mb-3">
        <h1 class="my-5 text-center">
          <%= t "messages.sign_in.welcome_back" %>
        </h1>

        <%= form_with model: resource, url: sign_in_path, html: { class: "mb-3" }, local: true do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, autofocus: true, class: "form-control", required: true, tabindex: 1, type: "email" %>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= f.label :password %>
              </div>

              <div class="col text-right">
                <%= link_to t("messages.sign_in.forgot_password"), new_password_path %>
              </div>
            </div>

            <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, tabindex: 2 %>
          </div>

          <div class="form-check">
            <%= f.label :remember_me, class: "form-check-label" do %>
              <%= f.check_box :remember_me, class: "form-check-input", tabindex: 3 %>
              <%= t "messages.sign_in.remember_me" %>
            <% end %>
          </div>

          <div class="text-center">
            <%= f.button class: "btn btn-primary", tabindex: 4 do %>
              <i class="fas fa-sign-in-alt mr-1"></i>
              <%= t "nouns.sign_in" %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <small>
          <%= t "messages.sign_in.sign_up_link_html", link: link_to(t("nouns.sign_up"), sign_up_path) %>
        </small>
      </div>
    </div>
  </div>
</div>
