<ol class="flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5">
  <li class="inline-flex items-center gap-1.5">
    <%= link_to space.name, space_path(space.identifier) %>
  </li>

  <% items.each do |item| %>
    <li>
      <%= render BaseUI::IconComponent.new(
        name: "caret-right",
        size: "14px",
        class_name: "fill-gray-500"
      ) %>
    </li>

    <li class="inline-flex items-center gap-1.5">
      <%= item %>
    </li>
  <% end %>
</ol>
