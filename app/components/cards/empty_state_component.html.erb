<div class="<%= class_names("card", class_name) %>">
  <div class="card-body items-center gap-8 text-center p-4 sm:p-8">
    <div class="flex flex-col gap-4">
      <div class="rounded-full bg-brand-100 opacity-40">
        <%= render Basic::IconComponent.new(name: icon_name, size: "50px", class_name: "fill-gray-900") %>
      </div>

      <h2 class="card-title font-normal">
        <%= message %>
      </h2>
    </div>

    <%= content %>
  </div>
</div>
