<div class="bg-card flex w-fit items-center gap-4 rounded-full border border-gray-400 px-4 py-1 md:hidden">
  <% if show_sidebar %>
    <!-- サイドバー開くボタン -->
    <button 
      data-action="click->sidebar#open" 
      class="flex flex-col gap-1 items-center w-[40px]"
      aria-label="<%= t('nouns.menu') %>"
    >
      <%= render BaseUI::IconComponent.new(name: "bars-regular", size: "26px", class_name: "fill-base-content") %>
      
      <div class="text-xs text-gray-500">
        <%= t("nouns.menu") %>
      </div>
    </button>
  <% end %>

  <%= link_to signed_in? ? home_path : root_path, class: "flex flex-col gap-1 items-center w-[40px]" do %>
    <%= render BaseUI::IconComponent.new(name: current_page_name == PageName::Home ? "house-fill" : "house-regular", size: "26px", class_name: "fill-base-content") %>

    <div class="text-xs text-gray-500">
      <%= t("nouns.home") %>
    </div>
  <% end %>

  <% if signed_in? %>
    <%= link_to search_path_with_space_filter, class: "flex flex-col gap-1 items-center w-[40px]" do %>
      <%= render BaseUI::IconComponent.new(name: current_page_name == PageName::Search ? "magnifying-glass-fill" : "magnifying-glass-regular", size: "26px", class_name: "fill-base-content") %>

      <div class="text-xs text-gray-500">
        <%= t("nouns.search") %>
      </div>
    <% end %>
  <% end %>
</div>
