<nav class="navbar px-4">
  <div class="navbar-start">
    <%= link_to root_path do %>
      <%= render Wikino::UI::Icon.new(name: "logo", size: "24px", class_name: "fill-white") %>
    <% end %>
  </div>

  <div class="navbar-center">
    <% if signed_in? %>
      <input class="input input-bordered" type="text" placeholder="Search...">
    <% end %>
  </div>

  <div class="navbar-end">
    <ul class="menu menu-horizontal px-1">
      <% if signed_in? %>
        <li>
          <%= button_to t("nouns.sign_out"), session_path(space_identifier: viewer!.space_identifier), {
            method: :delete
          } %>
        </li>
      <% else %>
        <li>
          <%= link_to t("nouns.sign_up"), sign_up_path %>
        </li>

        <li>
          <%= link_to t("nouns.sign_in"), sign_in_path %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
