<header
  class="<%= class_names("bg-base-200 data-[stuck]:drop-shadow-sm data-[stuck]:py-2 py-6 transition-all duration-200 ease-in-out",
    class_name
  ) %>"
  data-controller="stuck"
>
  <div class="navbar mx-auto min-h-[auto] w-full max-w-screen-lg px-4 py-0">
    <div class="navbar-start gap-8">
      <%= render Links::BrandIconComponent.new(current_page_name:) %>

      <% if Current.viewer.signed_in? %>
        <div class="flex gap-6">
          <%= render Navbars::Top::LinkItemComponent.new(current_page_name:, page_name: PageName::Home) %>
          <%= render Navbars::Top::LinkItemComponent.new(current_page_name:, page_name: PageName::Inbox) %>

          <%= render Buttons::SearchComponent.new(
            class_name: "text-gray-600 hover:text-gray-950 text-sm transition duration-200 ease-in-out group"
          ) do %>
            <div class="flex items-center gap-2">
              <%= render Basic::IconComponent.new(
                name: "magnifying-glass",
                size: "16px",
                class_name: "fill-gray-600 group-hover:fill-gray-950 transition duration-200 ease-in-out"
              ) %>

              <%= t("nouns.search") %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="navbar-end">
      <% if Current.viewer.signed_in? %>
        <div class="avatar">
          <%= link_to "#", class: "w-10 rounded-full" do %>
            <%= image_tag "https://shimba.co/img/shimbaco.jpg", class: "rounded-full" %>
          <% end %>
        </div>
      <% else %>
        <%= render Navbars::Top::LinkItemComponent.new(current_page_name:, page_name: PageName::SignIn) %>
      <% end %>
    </div>
  </div>
</header>
