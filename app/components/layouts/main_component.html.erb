<div class="<%= class_name %>">
  <header class="sticky top-0 z-navbar hidden lg:block">
    <div
      class="<%= class_names("
        bg-base-200 data-[stuck]:drop-shadow-sm data-[stuck]:py-2 py-6 transition-all duration-200
        ease-in-out
      ") %>"
      data-controller="stuck"
    >
      <div class="navbar mx-auto min-h-[auto] w-full max-w-screen-lg px-4 py-0">
        <div class="navbar-start gap-4">
          <%= render Links::BrandIconComponent.new(current_page_name:) %>

          <%= breadcrumbs %>
        </div>

        <div class="navbar-end">
          <%= render NavbarComponent.new(signed_in:, current_page_name:) %>
        </div>
      </div>
    </div>
  </header>

  <div class="flex flex-col gap-4 pb-20">
    <div class="<%= class_names("mx-auto w-full", content_screen_class_name) %>">
      <%= main_content %>
    </div>
  </div>

  <div class="z-50 fixed bottom-2 left-1/2 flex translate-x-[-50%] flex-col gap-4">
    <%= render Toasts::FlashComponent.new(flash:) %>
    <%= render Navbars::BottomComponent.new(current_page_name:) %>
  </div>
</div>
