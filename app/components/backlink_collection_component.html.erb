<% backlinks.each do |backlink| %>
  <%= render Cards::PageCardComponent.new(page: backlink.page, class_name: "bg-base-300") %>
<% end %>

<% if pagination.has_next %>
  <turbo-frame id="backlink-collection">
    <%= render Buttons::LinkPaginationButtonComponent.new(
      path: frame_page_backlink_list_path(page.number, after: pagination.next_cursor)
    ) %>
  </turbo-frame>
<% end %>
