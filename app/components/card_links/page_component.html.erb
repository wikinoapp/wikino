<%= link_to page_path(space.identifier, page.number) do %>
  <%= render BaseUI::CardComponent.new(class_name: build_card_class) do |card| %>
    <%= card.with_body do %>
      <% if page.pinned? %>
        <%= render BaseUI::IconComponent.new(name: "push-pin-filled", size: "18px", class_name: "-right-1 -top-1 absolute fill-amber-800") %>
      <% end %>

      <div class="flex flex-col gap-1">
        <% if show_topic_name? %>
          <% if show_space_name? %>
            <div class="flex items-center gap-1">
              <span class="text-xs text-gray-500">
                <%= space.name %>
              </span>

              <span class="text-xs text-gray-500">
                /
              </span>

              <div class="flex items-center gap-0.5">
                <%= render Icons::TopicComponent.new(topic:, size: "12px", class_name: "fill-gray-500") %>

                <span class="text-xs text-gray-500">
                  <%= topic.name %>
                </span>
              </div>
            </div>
          <% else %>
            <div class="flex items-center gap-0.5">
              <%= render Icons::TopicComponent.new(topic:, size: "12px", class_name: "fill-gray-500") %>

              <span class="text-xs text-gray-500">
                <%= topic.name %>
              </span>
            </div>
          <% end %>
        <% end %>

        <div class="line-clamp-3 text-sm font-bold">
          <%= page.title %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
