<% if edit_suggestions.present? %>
  <div class="flex flex-col gap-4">
    <% edit_suggestions.each do |edit_suggestion| %>
      <div class="border-border bg-card hover:bg-accent/50 rounded-lg border p-4 transition-colors">
        <div class="flex items-start justify-between gap-4">
          <div class="min-w-0 flex-1">
            <!-- タイトルとステータス -->
            <div class="mb-2 flex items-center gap-3">
              <%= link_to edit_suggestion_path(edit_suggestion:), {
                class: "text-lg font-semibold text-foreground hover:text-primary transition-colors"
              } do %>
                <%= edit_suggestion.title %>
              <% end %>

              <span class="<%= status_color_class(edit_suggestion:) %> inline-flex items-center rounded-full px-2 py-1 text-xs font-medium">
                <%= status_label(edit_suggestion:) %>
              </span>
            </div>

            <!-- 説明文 -->
            <% if edit_suggestion.description.present? %>
              <p class="text-muted-foreground mb-3 line-clamp-2 text-sm">
                <%= edit_suggestion.description %>
              </p>
            <% end %>

            <!-- メタ情報 -->
            <div class="text-muted-foreground flex items-center gap-4 text-xs">
              <div class="flex items-center gap-1">
                <%= render BaseUI::IconComponent.new(
                  name: "user",
                  size: "14px",
                  class_name: "fill-muted-foreground"
                ) %>
                <%= edit_suggestion.created_space_member.user.name %>
              </div>

              <div class="flex items-center gap-1">
                <%= render BaseUI::IconComponent.new(
                  name: "clock",
                  size: "14px",
                  class_name: "fill-muted-foreground"
                ) %>
                <%= l(edit_suggestion.created_at.to_date, format: :long) %>
              </div>

              <!-- TODO: ページ数の表示は後で実装 -->
              <%# if edit_suggestion.page_count > 0 %>
                <%# <div class="flex items-center gap-1"> %>
                  <%#= render BaseUI::IconComponent.new( %>
                    <%# name: "file", %>
                    <%# size: "14px", %>
                    <%# class_name: "fill-muted-foreground" %>
                  <%# ) %> %>
                  <%#= t("messages.edit_suggestions.page_count", count: edit_suggestion.page_count) %>
                <%# </div> %>
              <%# end %>
            </div>
          </div>

          <!-- アクションボタン（将来の機能として） -->
          <div class="flex-shrink-0">
            <!-- ここに詳細ページへのリンクやその他のアクションボタンを配置 -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render BaseUI::EmptyStateComponent.new(
    icon_name: "file-plus",
    message: t("messages.edit_suggestions.empty_state.title")
  ) do %>
    <div class="text-muted-foreground">
      <%= t("messages.edit_suggestions.empty_state.description") %>
    </div>
  <% end %>
<% end %>
