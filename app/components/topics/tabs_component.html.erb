<nav class="border-b border-gray-200">
  <div class="flex space-x-8">
    <% tabs.each do |tab| %>
      <%= link_to tab.path, class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-primary-500 text-primary-600' if tab.active} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' unless tab.active}" do %>
        <%= tab.label %>
      <% end %>
    <% end %>
  </div>
</nav>
