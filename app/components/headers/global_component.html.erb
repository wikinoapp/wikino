<header>
  <%# PCサイズ %>
  <div class="hidden md:flex mx-auto min-h-auto w-full justify-between p-4 max-w-(--content-screen-max-width-medium)">
    <div class="flex gap-4 items-center">
      <% if show_sidebar %>
        <!-- サイドバー開くボタン (md以上xl未満) -->
        <button
          data-action="click->sidebar#open"
          class="hidden md:block xl:hidden p-2 hover:bg-brand-200 rounded-md transition-colors cursor-pointer"
          aria-label="<%= t('nouns.menu') %>"
        >
          <%= render BaseUI::IconComponent.new(name: "sidebar-regular", size: "24px", class_name: "fill-base-content") %>
        </button>
      <% end %>

      <%= render Links::BrandIconComponent.new(current_page_name:) %>

      <%= breadcrumb %>
    </div>
  </div>

  <%# モバイルサイズ %>
  <% if breadcrumb? %>
    <div class="flex items-center gap-4 px-4 pt-4 md:hidden">
      <%= breadcrumb %>
    </div>
  <% end %>
</header>
