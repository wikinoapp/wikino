<header class="md:z-navbar static md:sticky md:top-0">
  <%# PCサイズ %>
  <div
    class="<%= class_names("
      bg-base-200 data-stuck:drop-shadow-sm data-stuck:py-2 py-4 transition-all duration-200
      ease-in-out hidden md:block
    ") %>"
    data-controller="stuck"
  >
    <div class="flex justify-between mx-auto min-h-auto w-full max-w-3xl px-4 py-0 bg-brand-100">
      <div class="gap-4">
        <%= render Links::BrandIconComponent.new(current_page_name:) %>

        <%= breadcrumbs %>
      </div>

      <div class="hidden md:flex">
        <%= render NavbarComponent.new(current_page_name:, current_user:) %>
      </div>
    </div>
  </div>

  <%# モバイルサイズ %>
  <% if breadcrumbs? %>
    <div class="flex items-center gap-4 px-4 pt-4 md:hidden">
      <%= breadcrumbs %>
    </div>
  <% end %>
</header>
