<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-2">
    <div class="flex flex-wrap-reverse items-center justify-between gap-4 md:flex-nowrap">
      <h1 class="flex items-center gap-2 text-3xl font-bold antialiased">
        <%= title %>

        <% if help_url.present? %>
          <div
            class="tooltip z-tooltip"
            data-tip="<%= t("verbs.view_help") %>"
          >
            <%= link_to help_url, target: "_blank", class: "flex items-center" do %>
              <%= render Basic::IconComponent.new(
                name: "info-regular",
                size: "28px",
                class_name: "fill-gray-600 hover:fill-gray-950 transition duration-200 ease-in-out"
              ) %>
            <% end %>
          </div>
        <% end %>
      </h1>

      <% if actions? %>
        <div class="flex w-full flex-none items-center justify-end gap-2 md:w-auto">
          <%= actions %>
        </div>
      <% end %>
    </div>

    <% if subtitle? %>
      <div class="text-sm text-gray-600">
        <%= subtitle %>
      </div>
    <% end %>
  </div>

  <hr class="border-gray-300">
</div>
