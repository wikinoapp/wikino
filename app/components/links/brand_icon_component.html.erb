<%= link_to root_path, {
  class: class_names(
    "rounded-lg flex items-center justify-center transition duration-200 ease-in-out group p-1 w-[40px] h-[40px]",
    current_page? ? "bg-brand-950 hover:bg-brand-950" : "hover:bg-brand-950 border-2 border-gray-600 hover:border-brand-950",
    class_name
  )
} do %>
  <%= render BaseUI::IconComponent.new(
    name: "logo",
    size: "2rem",
    class_name: class_names(
      "transition duration-200 ease-in-out",
      current_page? ? "fill-white" : "fill-brand-950 group-hover:fill-white"
    )
  ) %>
<% end %>
