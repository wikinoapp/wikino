<%= render Basic::DropdownComponent.new(class_name: "dropdown-bottom dropdown-end") do |dropdown| %>
  <%= dropdown.with_button(class_name: "btn btn-sm btn-circle btn-outline btn-primary no-animation group") do %>
    <%= render Basic::IconComponent.new(name: "dots-three", size: "1.5rem", class_name: "fill-primary group-hover:fill-primary-content") %>
  <% end %>

  <%= dropdown.with_menu(class_name: "w-[200px]") do |dropdown_menu| %>
    <% if topic.can_update? %>
      <%= dropdown_menu.with_item do %>
        <%= link_to topic_settings_path(space.identifier, topic.number), class: "flex gap-2 items-center" do %>
          <%= render Basic::IconComponent.new(name: "gear-regular", size: "18px", class_name: "fill-primary") %>

          <%= t("nouns.settings") %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
