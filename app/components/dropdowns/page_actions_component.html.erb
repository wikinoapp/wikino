<%= render BaseUI::DropdownComponent.new(class_name: "dropdown-bottom dropdown-end") do |dropdown| %>
  <%= dropdown.with_button(class_name: "btn btn-sm btn-circle btn-outline group") do %>
    <%= render BaseUI::IconComponent.new(name: "dots-three", size: "1.5rem", class_name: "fill-primary group-hover:fill-primary-foreground") %>
  <% end %>

  <%= dropdown.with_menu(class_name: "w-[200px]") do |dropdown_menu| %>
    <%= dropdown_menu.with_item do %>
      <%= button_to trashed_page_path(space.identifier, page.number), {
        class: "text-red-600 flex gap-2 items-center w-full",
        form: {
          data: {
            turbo_confirm: t("messages.pages.are_you_sure_trash")
          }
        }
      } do %>
        <%= render BaseUI::IconComponent.new(name: "trash", size: "18px", class_name: "fill-red-600") %>

        <%= t("verbs.move_to_trash") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
