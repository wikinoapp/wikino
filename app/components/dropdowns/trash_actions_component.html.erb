<%= render DaisyUI::Dropdown.new(class_name: "dropdown-end") do |dropdown| %>
  <%= dropdown.with_button(class_name: "btn btn-ghost btn-xs p-0 rounded") do %>
    <%= render Basic::IconComponent.new(name: "dots-three", size: "1.5rem", class_name: "fill-gray-900") %>
  <% end %>

  <%= dropdown.with_menu(class_name: "w-[200px]") do |dropdown_menu| %>
    <%= dropdown_menu.with_item do %>
      <%= button_to trashed_page_path(Current.space!.identifier, page.number), {
        class: "flex gap-2 items-center w-full",
        form: {
          data: {
            turbo_confirm: t("messages.pages.are_you_sure_trash")
          }
        }
      } do %>
        <%= render Basic::IconComponent.new(name: "arrow-counter-clockwise", size: "18px") %>

        <%= t("verbs.restore") %>
      <% end %>
    <% end %>

    <%= dropdown_menu.with_item do %>
      <%= button_to trashed_page_path(Current.space!.identifier, page.number), {
        class: "text-red-600 flex gap-2 items-center w-full",
        form: {
          data: {
            turbo_confirm: t("messages.pages.are_you_sure_trash")
          }
        }
      } do %>
        <%= render Basic::IconComponent.new(name: "trash", size: "18px", class_name: "fill-red-600") %>

        <%= t("verbs.delete") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
