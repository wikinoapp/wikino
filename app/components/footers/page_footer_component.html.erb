<div class="flex flex-col gap-4">
  <div class="flex flex-col gap-2">
    <div class="antialiased font-bold">
      <%= t("nouns.links") %>
    </div>

    <% if link_list.links.present? %>
      <%= render PageLinkListComponent.new(link_list:) %>
    <% else %>
      <%= t("messages._common.no_links") %>
    <% end %>
  </div>

  <div class="flex flex-col gap-2">
    <div class="antialiased font-bold">
      <%= t("nouns.backlinks") %>
    </div>

    <% if backlink_list.backlinks.present? %>
      <ul class="gap-2 grid grid-cols-4">
        <%= render PageBacklinkListComponent.new(backlink_list:) %>
      </ul>
    <% else %>
      <%= t("messages._common.no_backlinks") %>
    <% end %>
  </div>
</div>
