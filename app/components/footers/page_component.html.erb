<div class="flex flex-col gap-6">
  <% if show_links? %>
    <div class="flex flex-col gap-4">
      <h2 class="text-xl/8 font-bold antialiased">
        <%= t("nouns.links") %>
      </h2>

      <%= render LinkListComponent.new(page:, link_list:) %>
    </div>
  <% end %>

  <% if show_backlinks? %>
    <div class="flex flex-col gap-4">
      <h2 class="text-xl/8 font-bold antialiased">
        <%= t("nouns.backlinks") %>
      </h2>

      <div class="grid grid-cols-1 gap-2 md:grid-cols-3">
        <%= render BacklinkListComponent.new(page:, backlink_list:) %>
      </div>
    </div>
  <% end %>
</div>
