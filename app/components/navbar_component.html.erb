<div
  class="<%= class_names("flex gap-6 items-center",
    class_name
  ) %>"
>
  <% if signed_in? %>
    <%= link_to home_path, {
      class: class_names(
        "text-gray-600 hover:text-gray-950 text-sm transition duration-200 ease-in-out group",
        class_name
      ),
      title: t("nouns.home")
    } do %>
      <%= render Basic::IconComponent.new(
        name: home_icon_name,
        size: "2rem",
        class_name: "fill-gray-600 group-hover:fill-gray-950 transition duration-200 ease-in-out"
      ) %>
    <% end %>

    <%= link_to "#", {
      class: class_names(
        "text-gray-600 hover:text-gray-950 text-sm transition duration-200 ease-in-out group",
        class_name
      ),
      title: t("nouns.inbox")
    } do %>
      <%= render Basic::IconComponent.new(
        name: inbox_icon_name,
        size: "2rem",
        class_name: "fill-gray-600 group-hover:fill-gray-950 transition duration-200 ease-in-out"
      ) %>
    <% end %>

    <%= button_to "#", {
      class: class_names(
        "text-gray-600 hover:text-gray-950 text-sm transition duration-200 ease-in-out group",
        class_name
      ),
      title: t("nouns.search")
    } do %>
      <%= render Basic::IconComponent.new(
        name: "magnifying-glass",
        size: "2rem",
        class_name: "fill-gray-600 group-hover:fill-gray-950 transition duration-200 ease-in-out"
      ) %>
    <% end %>

    <div class="avatar">
      <%= link_to "#", class: "w-8 rounded-full" do %>
        <%= image_tag "https://shimba.co/img/shimbaco.jpg", class: "rounded-full" %>
      <% end %>
    </div>
  <% else %>
    <%= link_to sign_in_path, {
      class: class_names(
        "text-gray-600 hover:text-gray-950 text-sm transition duration-200 ease-in-out group",
        class_name
      ),
      title: t("nouns.sign_in")
    } do %>
      <%= render Basic::IconComponent.new(
        name: "sign-in-regular",
        size: "2rem",
        class_name: "fill-gray-600 group-hover:fill-gray-950 transition duration-200 ease-in-out"
      ) %>
    <% end %>
  <% end %>
</div>
